<div class="clear20"></div>
<input type="hidden" id="jqxSample" />
<div class="NewButton">
    <input type="button" id="btnNew" class="BlueBtn" onclick="ShowInsert()" value="Add New" />
</div>
<div class="clear"></div>
<div class="clear20"></div>
<div id='jqxWidget' style="font-size: 13px; font-family: Verdana; float: left; z-index: 1; padding-left: 15%;">

    <div id="jqxgrid">
    </div>
</div>
<div class="clear20"></div>
<div id="custom_container"></div>

<div  id="PopUpMeForMasters">
    <div class="clear"></div>
    <div class="CloseDivOnPopup">
        <input type="button" id="close" class="BlueBtn" onclick="ClosePopUpDiv('PopUpMeForMasters')" value="Close" />
    </div>
    <div class="clear"></div>
    <div>
        <h2>
            <div id="PopupCaption"></div>
        </h2>
    </div>
    <div class="DivClearTop"></div>
    <div class="clear"></div>

    <div class="LabelDiv">Name</div>
    <div class="ControlDiv">
        <input type="text" class="inputText" maxlength="50" id="Name" placeholder="Enter Name" value="" tabindex="0" />
    </div>
    <div class="Validation">
        <span id="ValName" style="display: none">Name Required</span>
    </div>
    <div class="clear"></div>
    <div class="LabelDiv">Address</div>
    <div class="ControlDiv">
        <input type="text" class="inputText" maxlength="50" id="Address" placeholder="Enter Address" value="" tabindex="0" />
    </div>
    <div class="Validation">
        <span id="ValAddress" style="display: none">Address Required</span>
    </div>
    <div class="clear"></div>
        <div class="LabelDiv">Country</div>
            <div class="ControlDiv">
                <select id="PlaceDDL" class="inputCombo" >
                </select>
            </div>
            <div class="Validation">
                <span id="ValPlaceDDL" style="display: none">Select a Place</span>
            </div>
    <div class="clear"></div>
    <div class="LabelDiv">Phone Number</div>
    <div class="ControlDiv">
        <input type="text" class="inputText" maxlength="12" id="Number" placeholder="Enter Number" value="" tabindex="0" />
    </div>
    <div class="Validation">
        <span id="ValNumber" style="display: none">PhoneNumber Required</span>
    </div>
    <div class="clear10"></div>
    <span class="staySign" style="padding-left: 21%;">
        <input type="checkbox" id="IsActive" checked="checked" title="Active Category" />&nbsp;&nbsp;Is Active<br />
        <br />
    </span>


    <div class="PopMessage" id="PopMessage"></div>
    <div class="Seperate"></div>

    <div class="ButtonDiv">
        <input type="button" class="BlueBtn" id="save" value="Save" onclick="DoInsert()" />
        <input type="button" class="BlueBtn" style="width: 18%" id="edit" value="Update" onclick="DoUpdate()" />
        <input type="button" class="OrangeBtn" style="width: 18%" id="delete" value="Delete" onclick="ShowDelete()" />
        <input type="button" class="OrangeBtn" style="width: 18%" id="Reset" value="Reset" onclick="ResetControls()" />
    </div>

    <div class="DivClearTop"></div>
    <input type="hidden" id="lblId" value="-1" />
</div>

<div id="backgroundPopup"></div>
<div id="PopUpDelete">

    <h2>Delete this Details</h2>


    <div style="text-align: right; margin-left: 100px; padding-bottom: 10px;">
        <input type="button" class="BlueBtn" id="Yes" value="Yes" onclick="DoDelete()" />
        <input type="button" class="BlueBtn" id="Cancel" value="Cancel" onclick=" disablePopup('PopUpDelete')" />
    </div>

    <input type="hidden" id="DeleteId" value="0" />
</div>